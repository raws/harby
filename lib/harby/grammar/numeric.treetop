module Harby
	module Grammar
		grammar Numeric
			rule numeric
				float / integer
			end
			
			rule float
				[-+]? [0-9]+ "." [0-9]+ {
					def parsed_value
						text_value.to_f
					end
				}
			end
			
			rule integer
				[-+]? [0-9]+ {
					def parsed_value
						text_value.to_i
					end
				}
			end
		end
	end
end
