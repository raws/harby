module Harby
	module Grammar
		grammar Numeric
			rule numeric
				float / integer
			end
			
			rule float
				sign? number+ "." number+ {
					def parsed_value
						text_value.to_f
					end
				}
			end
			
			rule integer
				sign? number+ {
					def parsed_value
						text_value.to_i
					end
				}
			end
			
			rule number
				[0-9]
			end
			
			rule sign
				[-+]
			end
		end
	end
end
