module Harby
	module Grammar
		grammar String
			rule string
				single_quoted / naked
			end
			
			rule single_quoted
				"'" value:("\\'" / !"'" .)* "'" {
					def parsed_value
						value.text_value.gsub("\\'", "'")
					end
				}
			end
			
			rule naked
				("\\ " / !" " .)+ {
					def parsed_value
						text_value.gsub("\\ ", " ")
					end
				}
			end
		end
	end
end
